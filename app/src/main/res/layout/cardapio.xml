<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_entradas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Entradas"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <ListView
        android:id="@+id/list_entradas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        tools:listitem="@layout/food_listview" />

    <TextView
        android:id="@+id/label_carnes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Carnes"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <ListView
        android:id="@+id/list_carnes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        tools:listitem="@layout/listview" />

    <TextView
        android:id="@+id/label_porcoes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Porcoes"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center_vertical" />

    <ListView
        android:id="@+id/list_porcoes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        tools:listitem="@layout/listview" />

    <TextView
        android:id="@+id/label_bebidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Bebidas"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center_vertical" />

    2
</LinearLayout>