<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:background="@android:color/background_dark">

    <!-- Name Label -->
    <TextView
        android:id="@+id/label_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <!-- Table Label -->
    <TextView
        android:id="@+id/label_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginBottom="5dip"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <!-- Button to show session data -->
    <Button android:id="@+id/btn_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Atualizar Dados"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <Button android:id="@+id/btn_list_orders"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Ver Banco de Dados"
        android:layout_gravity="bottom" />

    <!-- Button to show session data -->
    <Button android:id="@+id/btn_logout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/menu_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CardÃ¡pio"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <ListView
    android:id="@+id/list_cardapio"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:listitem="@layout/food_listview"
        android:layout_weight="1.80" />

    <Button android:id="@+id/btn_close_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Fechar Pedido"/>

</LinearLayout>
